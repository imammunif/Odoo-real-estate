<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="state"/>
                <button name="action_accept" string="Accept" type="object" icon="fa-check" attrs="{'invisible':[('state', '!=', False)]}"/>
                <button name="action_refuse" string="Refuse" type="object" icon="fa-times" attrs="{'invisible':[('state', '!=', False)]}"/>
            </tree>
        </field>
    </record>

</odoo>